<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Restaurant Name -->
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Restaurant Details -->
        <TextView
            android:id="@+id/tvRestaurantDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Details"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Type of Food -->
        <TextView
            android:id="@+id/tvTypeOfFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Cuisine: Italian"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Restaurant Rating -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 4.5"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Distance -->
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 1.2 km"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: +1 123-456-7890"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Main St, Springfield, IL"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours: 10:00 AM - 10:00 PM"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <!-- Bio Section -->
        <TextView
            android:id="@+id/tvBioTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relaxed, family-owned venue doling out pub grub &amp; local brews plus brunch &amp; open-mike nights."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Map Section -->
        <WebView
            android:id="@+id/webViewMap"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Featured Section -->
        <TextView
            android:id="@+id/tvFeaturedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Our Menu Button -->
            <Button
                android:id="@+id/btnOurMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Menu"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <!-- Make Reservations -->
            <Button
                android:id="@+id/btnMakeReservations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Reservations"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Spacer to push the back button to the bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_gravity="start"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>

