<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Restaurant Name -->
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvRestaurantDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address, City, State, ZIP"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Rating -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating: 4.5/5"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Type of Food -->
        <TextView
            android:id="@+id/tvTypeOfFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Food: Italian, Pizza, Vegetarian"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Distance -->
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance from You: 2.5 km"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Contact -->
        <TextView
            android:id="@+id/tvContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: (123) 456-7890"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Hours -->
        <TextView
            android:id="@+id/tvHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hours: 10:00 AM - 10:00 PM"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- WebView for Map -->
        <WebView
            android:id="@+id/webViewMap"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="onBackClick" />
    </LinearLayout>
</ScrollView>
